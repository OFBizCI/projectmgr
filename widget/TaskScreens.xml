                        </container>
                        <container style="righthalf">
                            <include-screen name="TaskTeamInfo"/>
                            <include-screen name="ListTaskContent"/>
                            <include-screen name="NoteInfo"/>
                            <include-screen name="ListWorkEffortRequests"/>
                        </container>
                    </decorator-section>
                </decorator-screen>
            </widgets>            
        </section>
    </screen>
