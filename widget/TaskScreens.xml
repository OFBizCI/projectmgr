    <screen name="TaskView">        
        <section>
            <actions>
                <set field="titleProperty" value="ProjectMgrTaskSummary"/>
                <set field="headerItem" value="task"/>
                <set field="tabButtonItem" value="taskView"/>
                <set field="workEffortId" from-field="parameters.workEffortId"/>
